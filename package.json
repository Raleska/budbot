{
  "name": "bot_damir_remind",
  "version": "1.0.0",
  "description": "Telegram bot for vitamin reminders",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:memory": "cross-env USE_DATABASE=false node index.js",
    "start:webhook": "cross-env USE_WEBHOOK=true node index.js",
    "start:webhook:memory": "cross-env USE_WEBHOOK=true USE_DATABASE=false node index.js",
    "dev": "node --watch index.js",
    "test": "node --test",
    "test:coverage": "c8 --reporter=text-summary --reporter=html --all --include=\"config/*.js\" --include=\"utils/*.js\" --include=\"services/*.js\" --include=\"handlers/*.js\" --include=\"database/**/*.js\" --exclude=\"**/node_modules/**\" --exclude=\"**/test/**\" node --test",
    "webhook:set": "node scripts/setWebhook.js",
    "webhook:delete": "node scripts/deleteWebhook.js",
    "webhook:info": "node scripts/getWebhookInfo.js",
    "check": "node scripts/check-bot-status.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "vitamins",
    "reminder"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "telegraf": "^4.15.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "cross-env": "^10.1.0"
  }
}
