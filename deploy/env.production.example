# Переменные окружения для продакшена
# Скопируйте этот файл в .env и заполните значения

# Telegram Bot Token (обязательно)
BOT_TOKEN=ваш_токен_от_BotFather

# Режим работы с БД (true - с PostgreSQL, false - in-memory)
USE_DATABASE=true

# Режим вебхука (true - вебхук, false - long polling)
USE_WEBHOOK=true

# Настройки вебхука (обязательно если USE_WEBHOOK=true)
WEBHOOK_URL=https://hyalpharmbot.ru
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook

# Secret token для защиты вебхука (рекомендуется)
# Сгенерируйте: openssl rand -hex 32
WEBHOOK_SECRET_TOKEN=ваш_секретный_токен_32_символа

# Настройки PostgreSQL (если USE_DATABASE=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bot_remind
DB_USER=postgres
DB_PASSWORD=ваш_пароль_от_postgresql

# SSL настройки для PostgreSQL (для облачных провайдеров)
# Установите DB_SSL=true если используете SSL подключение
DB_SSL=false
# Путь к SSL сертификату (по умолчанию: ~/.cloud-certs/root.crt)
# DB_SSL_CA=/path/to/root.crt
# Отклонять неавторизованные сертификаты (по умолчанию: true)
# DB_SSL_REJECT_UNAUTHORIZED=true

# ID администраторов для команд /stats, /user, /export
# Можно указать несколько через запятую: 123456789,987654321
ADMIN_IDS=
